[gpg]
	format = ssh
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[commit]
	gpgsign = true
[push]
	autoSetupRemote = true
[core]
	pager = delta
	editor = vim
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = false
	side-by-side = true
	paging = always
	pager = less -X
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
